@model List<BLL_Epreuve_ASP_SQL.Entities.Produit>

<h2>Panier</h2>
@if (Model.Count == 0)
{
    <p>Votre panier est vide.</p>
}
else
{
    <table>
        <tr>
            <th>Nom du Produit</th>
            <th>Prix</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Nom</td>
                <td>@product.Prix</td>
            </tr>
        }
    </table>
}
